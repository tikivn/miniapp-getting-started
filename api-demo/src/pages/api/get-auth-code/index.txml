<view>
  <block-header 
      title="Usage" 
      description="Get Auth code from Tiki User. This API will ask users to grant the permission" />

  <view class="block-content">
    <text class="title mb-8">Get Auth Code</text>
    <view class="component-item">
      <block tiki:if="{{data !== undefined}}">
        <text style="word-break: break-word;">{{data}}</text>
      </block> 
      <button loading="{{get.isLoading}}" style="width: 100%;" onTap="onGetRequest">
        Get Auth Code
      </button>
    </view>
  </view>

</view>

<view>
  <block-header 
      title="Usage" 
      description="Get basic information from Tiki User. This API will ask users to grant the permission" />

  <view class="block-content">
    <text class="title mb-8">Get User Token</text>
    <view class="component-item">
      <block tiki:if="{{data !== undefined}}">
        <text>{{data}}</text>
      </block>
      <button loading="{{get.isLoading}}" style="width: 100%;" onTap="onGetRequest">
        Get Token
      </button>
    </view>
  </view>

</view>

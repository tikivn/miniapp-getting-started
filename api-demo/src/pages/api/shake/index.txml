<view>
  <block-header title="Usage" description="Receive a single callback when device is shaked." />
  <view class="block-content">
    <button class="button-full" onTap="onWatchShake">
      {{isWatchingShake?'Watching shake':'Watch shake'}}
    </button>
    <text class="text-full">{{justShake?'Device is shaked':''}}</text>
  </view>
</view>

.flex-grow {
  flex-grow: 1;
}

.flex-line-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.block-variant-content-line > button {
  margin-right: var(--space-inline-2x-small);
}

.block-variant-content-line > button:last-child {
  margin-right: 0px;
}

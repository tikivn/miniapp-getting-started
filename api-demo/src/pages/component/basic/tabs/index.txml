  <view class="block-content">
    <text class="title mb-8">Variants</text>
    
    <text class="subtitle mb-8">Text only</text>
    <tabs tab-height="{{48}}" tabs="{{tabs1}}">
      <view class="tab-item" />
      <view class="tab-item" />

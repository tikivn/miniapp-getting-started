      <view class="tab-item" />
    </tabs>

    <text class="subtitle mb-8 mt-16">Text with icon</text>
    <tabs tabs="{{tabs2}}">
      <view class="tab-item" />
      <view class="tab-item" />
      <view class="tab-item" />
      <view class="tab-item" />
    </tabs>
  </view>

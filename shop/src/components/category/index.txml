<view class="{{className}}">
  <template name="loading">
    <view class="category-grid flex flex-col items-center">
      <view class="skeleton-category-grid-logo skeleton mb-2x-small"/>
      <view class="skeleton-category-grid-names flex flex-col items-center mb-2x-small">
        <view class="skeleton skeleton-font-regular skeleton-70-width mb-5x-small"/>
        <view class="skeleton skeleton skeleton-font-regular skeleton-100-width"/>
      </view>
    </view>
  </template>
  
  <template name="completed">
    <view
      class="category-grid flex flex-col items-center"
      onTap="_onTapCategory"
    >
      <image
        class="category-grid-logo mb-2x-small"
        src="{{category.image}}"
      />
      <text
        class="category-grid-name text-center"
        number-of-lines="{{3}}"
      >
        {{category.name}}
      </text>
    </view>
  </template>
  
  <template
    is="{{isLoading ? 'loading' : 'completed'}}"
    data="{{className, category, _onTapCategory}}"
  />
</view>


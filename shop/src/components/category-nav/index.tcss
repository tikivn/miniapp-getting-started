.category-nav {
  height: 100vh;
  overflow-y: auto;
  background-color: var(--gray10);
}

.category-nav-item .category-grid {
  --grid-item-width: 80px;
  --grid-item-image-with: 24px;

  padding: 8px;
}

.category-nav-item .category-grid-logo {
  margin-bottom: 4px;
}

.category-nav-item .category-grid-name {
  font-size: 10px;
  color: var(--gray60);
}

.category-nav-item .skeleton-category-grid-names > view {
  height: 15px;
}

.category-nav-item-active {
  background-color: var(--white);
}

.category-nav-item-active .category-grid-name {
  font-size: 10px;
  font-weight: bold;
  color: var(--gray200);
}

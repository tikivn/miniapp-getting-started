<view class="flex flex-col items-center {{className}}">
  <image
    class="mb-large"
    src="/assets/images/empty.png"
    mode="widthFix"
  />
  <text class="text-medium font-bold mb-5x-small">{{title}}</text>
  <text class="mb-medium">{{description}}</text>
  <button
    tiki:if="{{buttonText}}"
    class="w-full"
    shape="pill"
    onTap="_onTapButton"
  >
    {{buttonText}}
  </button>
</view>
.category-logo,
.skeleton-category-logo {
  width: var(--category-image-width, 40px);
  height: var(--category-image-width, 40px);
  border-radius: 40%;
}

.category-horizontal {
  min-height: 40px;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.category-horizontal-skeleton {
  height: 40px;
  width: calc(50vw - 20px);
}
